
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
      <!--部分テンプレートの呼び出し↓-->
      <%= render 'books/userinfo', book: @booknew, user: @user %>


    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

        <table class="table table-striped">
          <% if @user.id == current_user.id %>
            <tbody>
                <tr>
                  <td>
                    <a>
                      <%= link_to user_path(@user.id) do %>
                        <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                      <% end %>
                      <br>
                      <%= link_to @user.name, user_path(@user.id) %>
                    </a>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                  <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消去しますか?' }, class: "btn btn-sm btn-danger" %></td>
                    <% if @book.favorited_by?(current_user) %>
                      <td>
                        <%= link_to book_favorites_path(@book.id), method: :delete do %>
                          ♥<%= @book.favorites.count %>
                        <% end %>
                      </td>
                      <% else %>
                      <td>
                        <%= link_to book_favorites_path(@book.id), method: :post do %>
                          ♡<%= @book.favorites.count %>
                        <% end %>
                      </td>
                    <% end %>
                </tr>
            </tbody>
          <% else %>
            <tbody>
                <tr>
                  <td>
                    <a>
                      <%= link_to user_path(@user.id) do %>
                        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                      <% end %>
                      <br>
                      <%= link_to @user.name, user_path(@user.id) %>
                    </a>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                  <% if @book.favorited_by?(current_user) %>
                    <td>
                      <%= link_to book_favorites_path(@book), method: :delete do %>
                        ♥<%= @book.favorites.count %>
                      <% end %>
                    </td>
                    <td>コメント数：<%= @book.book_comments.count %></td>
                    <% else %>
                    <td>
                      <%= link_to book_favorites_path(@book), method: :post do %>
                        ♡<%= @book.favorites.count %>
                      <% end %>
                    </td>
                    <td>コメント数：<%= @book.book_comments.count %></td>
                  <% end %>
                  </tr>
            </tbody>
          <% end %>
        </table>
        <table class="comments">
          <% @book.book_comments.each do |book_comment| %>
            <tr><%= image_tag('no_image.jpg') %></tr>
            <tr><%= book_comment.comment %></tr>
            <td><%= link_to book_comment.user.name, user_path(@user.id) %></td>
            <% if book_comment.user == current_user %>
              <tr class="comment-delete">
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-danger", method: :delete %>
              </tr>
              <% end %>
          <% end %>

          </table>
          <div class="new-comment">
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
            <%= f.submit "送信" %>
          <% end %>
          </div>
    </div>
  </div>
</div>

