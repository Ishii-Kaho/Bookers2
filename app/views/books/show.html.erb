
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
      <!--部分テンプレートの呼び出し↓-->
      <%= render 'books/userinfo', book: @booknew, user: @user %>


    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

        <table class="table table-striped">
          <% if @user.id == current_user.id %>
            <tbody>
                <tr>
                  <td>
                    <a>
                      <%= link_to user_path(@user.id) do %>
                        <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                      <% end %>
                      <br>
                      <%= link_to @user.name, user_path(@user.id) %>
                    </a>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                  <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消去しますか?' }, class: "btn btn-sm btn-danger" %></td>
                </tr>
            </tbody>
          <% else %>
            <tbody>
                <tr>
                  <td>
                    <a>
                      <%= link_to user_path(@user.id) do %>
                        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                      <% end %>
                      <br>
                      <%= link_to @user.name, user_path(@user.id) %>
                    </a>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                  </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  </div>
<br>

