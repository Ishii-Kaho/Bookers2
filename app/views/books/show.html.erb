<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
      <!--部分テンプレートの呼び出し↓-->
      <%= render 'books/userinfo', post_book: @post_book, user: current_user %>


    <div class="col-lg-8 offset-md-1">
      <h2>Books</h2>

        <table class="table table-striped">
          <tbody>
            <% @post_books.each do |post_book| %>
              <tr>
                <td><%= link_to @user.profile_image, user_path(current_user.id) %></td>
                <td><%= link_to @user.name, user_path(current_user.id) %></td>
                <td><%= link_to post_book.title, book_path(current_user.id) %></td>
                <td><%= post_book.opinion %></td>
                <td><%= link_to 'Edit', edit_book_path %></td>
                <td><%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
    </div>
  </div>
<br>

