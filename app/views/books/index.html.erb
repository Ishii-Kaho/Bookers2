<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
      <!--部分テンプレートの呼び出し↓-->
      <%= render 'books/userinfo', post_book: @post_book, user: current_user %>


    <div class="col-lg-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opnion</th>

            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @post_books.each do |post_book| %>
            <tr>
              <!--ユーザーのアイコンを表示、リンク先→選択したユーザーの投稿一覧を表示↓ format: 'jpeg', fallback: "no_image.jpg"-->
              <td><%= link_to user_path(current_user.id) do %>
              <%= attachment_image_tag post_book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
              <% end %>
              </td>
              <!--全ユーザーが投稿したタイトル一覧→選択した投稿の内容を表示（show）-->
              <td><%= link_to post_book.title, book_path(current_user.id) %></td>
              <td><%= post_book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>