<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
          <!--部分テンプレートの呼び出し↓-->
      <%= render 'books/userinfo', post_book: @post_book, user: @user %>


    <div class="col-lg-8">

        <table class="table table-striped">
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= user.profile_image do %>
                  <%= attachment_image_tag post_book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>