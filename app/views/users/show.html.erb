<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
          <!--部分テンプレートの呼び出し↓-->
      <%= render 'books/userinfo', post_book: @post_books, user: @user%>


    <div class="col-lg-8">

        <table class="table table-striped">
          <tbody>
            <% @post_books.each do |post_book| %>
              <tr>
                <td><%= link_to @user.profile_image, user_path(@user.id) %></td>
                <td><%= link_to post_book.title, book_path(post_book.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>